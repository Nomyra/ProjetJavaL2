    <children>

      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <left>
            <GridPane fx:id="gridCraft" gridLinesVisible="true" prefHeight="250.0" prefWidth="250.0"  BorderPane.alignment="CENTER">
              <columnConstraints>
                  <ColumnConstraints fx:id="line1" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints fx:id="line2" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints fx:id="line3" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints fx:id="row1" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints fx:id="row2" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints fx:id="row3" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
         </left>
         <right>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <Button fx:id="crafter" alignment="CENTER" ellipsisString="Craft" mnemonicParsing="false" text="Craft" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" />
               </BorderPane.margin>
            </Button>
         </center>
      </BorderPane>


      <Pane layoutX="119.0" layoutY="268.0" prefHeight="200.0" prefWidth="431.0">
         <children>
            <TableView prefHeight="200.0" prefWidth="345.0">
              <columns>
                <TableColumn fx:id="c1" prefWidth="341.0" text="C1" />
              </columns>
            </TableView>
         </children>
      </Pane>

        <!-- HORIZONTAL BOX-->

        <HBox id="HBox" alignment="CENTER" layoutX="10.0" layoutY="554.0" spacing="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="554.0">
            <children>
                <Label text="Search Text:" />
                <TextField fx:id="searchField" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="searchButton" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                <Label fx:id="searchLabel" />
            </children>
        </HBox>
    </children>
